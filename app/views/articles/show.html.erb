<%= render @article %>

<div>
  <% if user_signed_in? %>
  <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-light" %> |
  <% end %>
  
  <%= link_to "Back to articles", articles_path, class:"btn btn-light" %>

  <% if user_signed_in? %>
    <%= button_to "Delete this article", @article, method: :delete, class:"btn btn-danger" %>
  <% end %>
</div>
